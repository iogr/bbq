<div class="row">
  <div class="well well-lg col-lg-6 col-md-6">
    <div class="col-lg-12 col-md-12 ml-auto mr-auto">
      <h2><%= t('.sign_up') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render partial: 'partials/form_errors', locals: { model: @user } %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit t('.sign_up'), class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-12 col-md-12 ml-auto mr-auto devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
