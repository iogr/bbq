<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= pry.binding %>
    <%= f.text_field :name, class: 'form-control', value: "#{@user.valid_name}" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: "btn btn-primary btn-block" %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
